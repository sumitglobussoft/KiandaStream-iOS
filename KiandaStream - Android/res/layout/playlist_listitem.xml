<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical" 
    android:background="@drawable/text_background">
    
<TextView 
    android:id="@+id/playlist_songname"
    android:textColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:text="Hello"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"/>
<TextView 
    android:id="@+id/playlist_artistname"
    android:textColor="@color/Gray"
    android:layout_height="wrap_content"
    android:layout_below="@+id/playlist_songname"
    android:text="Hello"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"/>
<ImageView 
    android:id="@+id/playlist_share"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:src="@drawable/share"
    android:layout_centerVertical="true"/>
<ImageView 
    android:id="@+id/playlist_download"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toLeftOf="@+id/playlist_share"
    android:layout_marginRight="10dp"
    android:src="@drawable/download"
    android:layout_centerVertical="true"/>
<ImageView 
    android:id="@+id/playlist_isplaying"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:visibility="gone"
   android:layout_toLeftOf="@+id/playlist_download"
    android:layout_marginRight="10dp"
    android:src="@drawable/play_icon"
    android:layout_centerVertical="true"/>
</RelativeLayout>
