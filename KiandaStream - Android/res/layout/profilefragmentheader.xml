<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
     android:id="@+id/mainrl"> 
    
 <RelativeLayout android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:background="@color/black"
     android:id="@+id/userrl">
 <ImageView 
    android:id="@+id/userimage"
    android:layout_height="110dp"
    android:layout_width="110dp"
    android:src="@drawable/usericon"
    android:layout_centerHorizontal="true"
    />    
  <TextView 
      android:id="@+id/username"
      android:layout_below="@+id/userimage"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textStyle="bold"
      android:text="username"
      android:layout_centerHorizontal="true"
      android:textColor="@color/white"/>
  <ImageView
      android:id="@+id/editprofile" 
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginRight="8dp"
      android:layout_alignParentRight="true"
      android:src="@drawable/settings_icon"
      android:layout_below="@+id/userimage"/>  
 </RelativeLayout>       
 
<LinearLayout 
    android:id="@+id/tab"
    android:background="@color/blacklight"
    android:layout_below="@+id/userrl"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="5">
    <ImageView
        android:id="@+id/loved_song" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/loved_menu_active"/>
    <ImageView
        android:id="@+id/feed" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/feed_menu_unactive"/>
    <ImageView
        android:id="@+id/follower" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/followers_menu_unactive"/>
    <ImageView
        android:id="@+id/following" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/following_menu_unactive"/>
    <ImageView
        android:id="@+id/playlist" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/playlist_menu_unactive"/>
</LinearLayout>

</RelativeLayout>